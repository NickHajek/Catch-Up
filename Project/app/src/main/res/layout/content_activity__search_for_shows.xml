<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ant.catch_up.Activity_SearchForShows"
    tools:showIn="@layout/activity__search_for_shows">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/WhatShows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What Shows Do you Watch?"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Popular"
            android:textSize="25sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="351dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/GameOfThrones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="callGOTSeason"
                    android:text="Game of Thrones" />

                <Button
                    android:id="@+id/StrangerThings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stranger Things" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Button" />

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="callUserProfile"
            android:text="User Profile" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
